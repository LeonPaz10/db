<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto  ">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{link.id}}" method="post">

            <div class="form-group m-3">    
              <input
                type="text"
                value='{{link.Nombre}}'
                class="form-control"
                name="Nombre"
                placeholder="Nombre"
                autofocus
              />
            </div>
            <div class="form-group m-3">
              <input
                type="text"
                value='{{link.Apellido}}'
                name="Apellido"
                class="form-control"
                placeholder="Apellido "
              />
            </div>
            <div class="form-group m-3">
                <input
                type="number"
                value='{{link.Edad}}'
                name="Edad"
                class="form-control"
                placeholder="Edad "
              />
               <div class="form-group m-3">
                <input
                type="number"
                value='{{link.DNI}}'
                name="DNI"
                class="form-control "
                placeholder="DNI "
              />
               {{!-- <div class="form-group m-3">
                <input
                type="file"
                value='{{link.Foto}}'
                name="Foto"
                class="form-control"
                placeholder="Foto "
              /> --}}
               <div class="form-group m-3">
                <input
                type="text"
                value='{{link.Sector}}'
                name="Sector"
                class="form-control"
                placeholder="Sector "
              />
            <div class="form-group m-3">
                <button type="submit" class="btn btn-success btn-block">Guardar</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>